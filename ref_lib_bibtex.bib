	year = {2015},
	keywords = {phosphate transport proteins, phosphates, phsophate uptake, rhizosphere, transporters},
	pages = {984},
	file = {Full Text PDF:C\:\\Users\\krazy\\Zotero\\storage\\P342RXIZ\\Johri et al. - 2015 - Fungal association and utilization of phosphate by.pdf:application/pdf},
}

