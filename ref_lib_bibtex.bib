@article{northRadialHydraulicConductivity1996,
	title = {Radial {Hydraulic} {Conductivity} of {Individual} {Root} {Tissues} of {Opuntia} ficus-indica ({L}.) {Miller} as {Soil} {Moisture} {Varies}},
