	month = feb,
	year = {2009},
	pmid = {19033287},
	keywords = {Aechmea fasciata, Epiphytic bromeliads, forest canopies, luxury consumption, phosphorus uptake, phytotelms, plant nutrition},
	pages = {477--484},
	file = {Full Text PDF:C\:\\Users\\krazy\\Zotero\\storage\\2WGVVFCD\\Winkler and Zotz - 2009 - Highly efficient uptake of phosphorus in epiphytic.pdf:application/pdf;Snapshot:C\:\\Users\\krazy\\Zotero\\storage\\7SP6UQRR\\477.html:text/html},
