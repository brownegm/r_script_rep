@article{albertWhenHowShould2011,
  title = {When and How Should Intraspecific Variability Be Considered in Trait-Based Plant Ecology?},
  author = {Albert, C{\'e}cile H. and Grassein, Fabrice and Schurr, Frank M. and Vieilledent, Ghislain and Violle, Cyrille},
