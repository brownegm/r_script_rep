@article{kunert2021,
  title = {Leaf Turgor Loss Point Shapes Local and Regional Distributions of Evergreen but Not Deciduous Tropical Trees},
  author = {Kunert, Norbert and Zailaa, Joseph and Herrmann, Valentine and {Muller-Landau}, Helene C. and Wright, S. Joseph and P{\'e}rez, Rolando and McMahon, Sean M. and Condit, Richard C. and Hubbell, Steven P. and Sack, Lawren and Davies, Stuart J. and {Anderson-Teixeira}, Kristina J.},
