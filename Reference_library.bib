@article{koningsVegetationOpticalDepth2016,
  title = {Vegetation Optical Depth and Scattering Albedo Retrieval Using Time Series of Dual-Polarized {{L-band}} Radiometer Observations},
  author = {Konings, Alexandra G. and Piles, Mar{\'i}a and R{\"o}tzer, Kathrina and McColl, Kaighin A. and Chan, Steven K. and Entekhabi, Dara},
  year = {2016},
