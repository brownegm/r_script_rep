@article{saviPotentialMidInfraredSpectroscopy2018,
  title = {The Potential of {{Mid-Infrared}} Spectroscopy for Prediction of Wood Density and Vulnerability to Embolism in Woody Angiosperms},
  author = {Savi, Tadeja and Tintner, Johannes and Da Sois, Luca and Grabner, Michael and Petit, Giai and Rosner, Sabine},
